<Page
    x:Class="HotTab_Device2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HotTab_Device2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="300" Height="300">

    <Grid FocusVisualPrimaryBrush="#FFD8D9EC"  >
        <Button x:Name="btn_wifi" Content="Wifi" Margin="28,18,0,0" VerticalAlignment="Top" Click="btn_wifi_Click"  />
        <Button x:Name="btn_gobi3G" Content="Gobi3G" Margin="28,58,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_GPS" Content="GPS" Margin="28,98,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_bluetooth" Content="Bluetooth" Margin="28,138,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_webCamRear" Content="WebCam Rear" Margin="28,178,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_allLED" Content="AllLED" Margin="28,218,0,0" VerticalAlignment="Top"/>

        <Button x:Name="btn_barcode" Content="Barcode" Margin="148,18,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_webCamFront" Content="WebCam Front" Margin="148,58,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_RFID" Content="RFID" Margin="148,98,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_GPSAntenna" Content="GPS Antenna" Margin="148,138,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_expandUSB" Content="Expand USB" Margin="148,178,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_expandCOM" Content="Expand COM" Margin="148,218,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
